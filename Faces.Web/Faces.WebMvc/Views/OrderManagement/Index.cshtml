@model List<Faces.WebMvc.Models.ViewModels.OrderViewModel>

@{
    ViewData["Title"] = "Orders List";
}

<h3>Orders Management - overview</h3>
<div class="container">
    @if (Model.Count > 0)
    {
        <div class="row tab-pane" id="tableHead">
            <div class="col-3">
                <p>Order Id</p>
            </div>
            <div class="col-3">
                <p>User Email</p>
            </div>
            <div class="col-3">
                <p>Image</p>
            </div>
            <div class="col-3">
                <p>Status</p>
            </div>
        </div>
        foreach (var order in Model)
        {
            <div class="row clickable" onclick="location.href='@Url.Action("Details","OrderManagement",
                                                              new { orderId = order.Id})'">
                <div class="col-3">
                    @order.Id
                </div>
                <div class="col-3">
                    @order.Email
                </div>
                <div class="col-3">
                    <img src="@order.FileUrl" width="50px" height="50px" />
                </div>
                <div class="col-3">
                    @order.Status
                </div>
            </div>
        }
    }

</div>